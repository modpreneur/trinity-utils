{
  "name": "trinity/utils",
  "description": "Trinity Utils bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Trinity Team",
      "email": "info@modpreneur.com"
    }
  ],

  "require": {
    "php": ">=7.1",
    "doctrine/orm": "~2.5"
  },

  "require-dev": {
    "symfony/http-kernel": "~2.8|~3.0",
    "doctrine/annotations": "~1.2",
    "phpunit/phpunit": "~6.0",
    "satooshi/php-coveralls" : "~1.0",
    "twig/twig": "~2.0",
    "symfony/intl": "~3.0",
    "trinity/settings": "~1.2",
    "trinity/core-interfaces": "~1.0",
    "phpstan/phpstan": "~0.7"
  },

  "autoload": {
    "psr-4": { "Trinity\\Component\\Utils\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },

  "minimum-stability": "stable",

  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
